# Dicionários

estudante = {
    "nome": "Thiago",
    "idade": 36,
    "matricula": '14AB',
    "brasileiro": True,
    "cursos": ['História', 'Python', 'Inglês']
}

print(estudante['nome'])
print(estudante.get('credito'))

print(estudante['cursos'][0])

