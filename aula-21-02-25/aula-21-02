    "Daniele", "Leandro", "Adriano", "Vera", "Luciana", "Renata", "William", "Rafael", "Milena", "Aline"
]

# Fila convidados inacabavel...
while True:
    convidado = input('Qual seu nome:')
    if convidado in convidados:
        print('Seja bem vindo!!!!!!')
    else:
        print('=(')
    
    fila = input('Ainda tem mais gente pra entrar?')

    if fila != 'sim':
        break

suspeitos = ['Mário', 'João', 'Pedro', 'Otávio']
